
<% content_for :extra_header do %>
  <%= render "shared/banner" %>
<% end %>


<h1><%= @space.title %></h1>

<div class="flexbox">

  <div class="owner-profile">
    <div class="describe"><strong>Description :</strong> <%= @space.description %></div>
    <div class="owner"><strong>Owner email :</strong> <%= @owner.email %></div>
  </div>

  <div class="book-space">
    <% if @space.available? %>
      <p> L'appartement est disponible</p>
      <%= render 'bookings/form' %>
    <% else %>
      <h2>L'appartement n'est plus disponible</h2>
    <% end %>

  </div>
</div>



<p><%= link_to "Retour aux espaces", spaces_path %></p>


